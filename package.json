{
  "name": "markvue",
  "version": "1.0.1",
  "description": "Beautiful markdown viewer for Windows",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeromeheuze/MarkVue.git"
  },
  "keywords": ["markdown", "viewer", "windows", "electron", "ai"],
  "author": "Jerome Heuze",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/jeromeheuze/MarkVue/issues"
  },
  "homepage": "https://github.com/jeromeheuze/MarkVue#readme",
  "dependencies": {
    "alpinejs": "^3.15.2",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1"
  },
  "devDependencies": {
    "@electron/packager": "^19.0.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.jerome.markvue",
    "productName": "MarkVue",
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Markdown",
        "description": "Markdown File",
        "role": "Viewer"
      }
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "src/assets/MarkVue_256.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
